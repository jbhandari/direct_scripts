<h2> Sign Up </h2>
<h4> Step 1 of 2 </h4>
<%= form_for @user do |form| %>
  <% if @user.errors.any? %>
    Could not save user for the following reasons:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <p> I am a: </p>
    <p><%= form.radio_button :profile, 'Patient' %> Patient</p>
    <p><%= form.radio_button :profile, 'Physician' %> Physician </p>
    <p><%= form.radio_button :profile, 'Clinic' %> Clinic </p>
  </div>

  <div>
    <%= form.submit "Sign up" %>
  </div>

<% end %>
