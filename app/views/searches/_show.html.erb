<h3> Patient Search Query: "<%= @query %>" </h3>

<% @patients.each do |patient| %>
  <p>Patient ID: <%= patient.id %></p>
  <p>Name: <%= patient.name %></p>
  <p>Gender: <%= patient.gender  %></p>
  <p>D.O.B: <%= patient.birth_date %></p>
  <p>
    <%= patient.locality %>,
    <%= patient.state_prov %>
  </p>

  <%= button_to 'See Patient Information', patient_path(patient), method: :get %>
  <% if current_user.profile == 'Physician' %>
    <%= button_to 'Write Prescription For This Patient', new_patient_script_path(patient), method: :get %>
  <% end %>
<% end %>
